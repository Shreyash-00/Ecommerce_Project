@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Product Details</h1>

@if (ViewBag.ProductDetails != null)
{
    var product = ViewBag.ProductDetails;

    <div>
        @foreach (var property in product.GetType().GetProperties())
        {
            // Check if the property requires parameters
            if (property.GetIndexParameters().Length == 0)
            {
                var value = property.GetValue(product, null);

                // Display only non-null values
                if (value != null)
                {
                    <p><strong>@property.Name:</strong> @value</p>
                }
            }
        }
    </div>
}
else
{
    <p>Product details not found.</p>
}